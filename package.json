{
  "name": "survivor-pool",
  "packageManager": "bun@1.3.1",
  "type": "module",
  "scripts": {
    "db": "docker compose up -d && bun drizzle",
    "dev": "ENVIRONMENT=development bun --hot ./src/server.tsx",
    "drizzle": "drizzle-kit push",
    "docker": "docker build . --tag survivor-pool",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint . --fix --max-warnings=0",
    "preprod": "tailwindcss -o ./public/globals.css",
    "prod": "ENVIRONMENT=production bun ./src/server.tsx",
    "test-backend": "POSTGRES_URL=postgresql://postgres:pwd@localhost:5433/survivor-pool-test bun test test/**",
    "test-frontend": "bunx cypress run --component"
  },
  "dependencies": {
    "@clerk/backend": "2.20.0",
    "@clerk/clerk-react": "5.53.8",
    "@elysiajs/static": "1.4.6",
    "@headlessui/react": "2.2.9",
    "@heroicons/react": "2.2.0",
    "@tanstack/react-query": "5.90.7",
    "@trpc/client": "11.7.1",
    "@trpc/react-query": "11.7.1",
    "@trpc/server": "11.7.1",
    "drizzle-orm": "0.44.7",
    "elysia": "1.4.15",
    "elysia-hot-module-reload": "1.0.1",
    "elysia-rate-limit": "4.4.2",
    "postgres": "3.4.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-error-boundary": "6.0.0",
    "react-router-dom": "7.9.5",
    "spacetime": "7.11.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.1.17",
    "@testing-library/cypress": "10.1.0",
    "@types/bun": "1.3.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "cypress": "15.6.0",
    "drizzle-kit": "0.31.6",
    "eslint": "9.39.1",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "tailwindcss": "4.1.17",
    "@typescript/native-preview": "7.0.0-dev.20251110.1",
    "typescript-eslint": "8.46.4",
    "valibot": "1.1.0",
    "vite": "7.2.2"
  }
}
