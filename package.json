{
  "name": "survivor-pool",
  "packageManager": "bun@1.2.21",
  "type": "module",
  "scripts": {
    "db": "docker compose up -d",
    "dev": "bun db && bun drizzle && ENVIRONMENT=development bun --hot ./src/server.tsx",
    "drizzle": "drizzle-kit push",
    "docker": "docker build . --tag survivor-pool",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint . --fix --max-warnings=0",
    "preprod": "tailwindcss -o ./public/globals.css",
    "prod": "ENVIRONMENT=production bun ./src/server.tsx",
    "test-backend": "POSTGRES_URL=postgresql://postgres:pwd@localhost:5433/survivor-pool-test bun test test/features.test.ts",
    "test-frontend": "bunx playwright test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@clerk/backend": "2.14.0",
    "@clerk/clerk-react": "5.47.0",
    "@elysiajs/static": "1.4.0",
    "@headlessui/react": "2.2.8",
    "@tanstack/react-query": "5.89.0",
    "@trpc/client": "11.5.1",
    "@trpc/react-query": "11.5.1",
    "@trpc/server": "11.5.1",
    "drizzle-orm": "0.44.5",
    "elysia": "1.4.6",
    "elysia-hot-module-reload": "1.0.1",
    "elysia-rate-limit": "4.4.0",
    "postgres": "3.4.7",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-error-boundary": "6.0.0",
    "react-router-dom": "7.9.1",
    "spacetime": "7.10.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "1.55.0",
    "@tailwindcss/cli": "4.1.13",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "bun-types": "1.2.22",
    "drizzle-kit": "0.31.4",
    "eslint": "9.36.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "tailwindcss": "4.1.13",
    "@typescript/native-preview": "7.0.0-dev.20250920.1",
    "typescript-eslint": "8.44.0",
    "valibot": "1.1.0"
  }
}
