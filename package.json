{
  "name": "survivor-pool",
  "packageManager": "bun@1.2.21",
  "type": "module",
  "scripts": {
    "db": "docker compose up -d",
    "dev": "bun db && ENVIRONMENT=development bun --hot ./src/server.tsx",
    "drizzle": "drizzle-kit push",
    "docker": "docker build . --tag survivor-pool",
    "format": "prettier --write . && terraform fmt terraform",
    "format-check": "prettier --check . && terraform fmt -check terraform",
    "lint": "eslint . --fix --max-warnings=0",
    "preprod": "tailwindcss -o ./public/globals.css",
    "prod": "ENVIRONMENT=production bun ./src/server.tsx",
    "test-backend": "POSTGRES_URL=postgresql://postgres:pwd@localhost:5433/survivor-pool-test bun test test/features.test.ts",
    "test-frontend": "bun playwright test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@clerk/clerk-react": "5.9.4",
    "@elysiajs/static": "1.1.1",
    "@headlessui/react": "2.1.8",
    "@tanstack/react-query": "5.56.2",
    "@trpc/client": "11.5.0",
    "@trpc/react-query": "11.5.0",
    "@trpc/server": "11.5.0",
    "drizzle-orm": "0.33.0",
    "elysia": "1.3.21",
    "elysia-hot-module-reload": "1.0.1",
    "elysia-rate-limit": "4.1.0",
    "postgres": "3.4.7",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-error-boundary": "4.0.13",
    "react-router-dom": "6.26.2",
    "spacetime": "7.10.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "1.47.2",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "bun-types": "1.2.21",
    "drizzle-kit": "0.24.2",
    "eslint": "9.34.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.8",
    "tailwindcss": "3.4.13",
    "typescript": "5.9.2",
    "typescript-eslint": "8.41.0",
    "valibot": "1.1.0"
  }
}
