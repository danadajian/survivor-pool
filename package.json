{
  "name": "survivor-pool",
  "packageManager": "bun@1.3.4",
  "type": "module",
  "scripts": {
    "db": "docker compose up -d && bun drizzle",
    "dev": "rm -f public/client-*.js && ENVIRONMENT=development bun --hot ./src/server.tsx",
    "drizzle": "drizzle-kit push",
    "docker": "docker build . --tag survivor-pool",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint . --fix --max-warnings=0",
    "start": "bun ./src/server.tsx",
    "tailwind": "tailwindcss -o ./public/globals.css",
    "test-backend": "POSTGRES_URL=postgresql://postgres:pwd@localhost:5433/survivor-pool-test bun test test/**",
    "test-frontend": "bunx cypress run --component"
  },
  "dependencies": {
    "@clerk/backend": "2.27.1",
    "@clerk/clerk-react": "5.59.0",
    "@headlessui/react": "2.2.9",
    "@heroicons/react": "2.2.0",
    "@tailwindcss/cli": "4.1.18",
    "@tanstack/react-query": "5.90.12",
    "@trpc/client": "11.8.0",
    "@trpc/react-query": "11.8.0",
    "@trpc/server": "11.8.0",
    "drizzle-orm": "0.45.1",
    "isbot": "5.1.32",
    "pino": "10.1.0",
    "pino-pretty": "13.1.3",
    "postgres": "3.4.7",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-error-boundary": "6.0.0",
    "react-router-dom": "7.10.1",
    "spacetime": "7.12.0",
    "tailwindcss": "4.1.18",
    "trpc-bun-adapter": "1.3.0",
    "valibot": "1.2.0"
  },
  "devDependencies": {
    "@testing-library/cypress": "10.1.0",
    "@types/bun": "1.3.4",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20251216.1",
    "cypress": "15.7.1",
    "drizzle-kit": "0.31.8",
    "eslint": "9.39.2",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "0.7.2",
    "typescript-eslint": "8.50.0",
    "vite": "7.3.0"
  }
}
